<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/product_image_iv"
        android:layout_width="0dp"
        app:layout_constraintWidth_percent="0.3"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/product_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/product_image_iv"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toTopOf="@id/product_image_iv"
        android:textColor="@color/cerulean"
        android:textStyle="bold"
        tools:text="Apple iPhone 6 32GB Grijs" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/product_rate_rb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        app:layout_constraintStart_toStartOf="@id/product_name_tv"
        app:layout_constraintTop_toBottomOf="@id/product_name_tv"
        android:layout_marginTop="4dp"
        android:theme="@style/RatingBar"
        tools:rating="2" />

    <TextView
        android:id="@+id/product_n_of_reviews_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/product_rate_rb"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="@id/product_rate_rb"
        app:layout_constraintBottom_toBottomOf="@id/product_rate_rb"
        android:textColor="@color/black"
        tools:text="13 review" />

    <TextView
        android:id="@+id/product_info_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/product_rate_rb"
        app:layout_constraintEnd_toEndOf="@id/product_name_tv"
        app:layout_constraintTop_toBottomOf="@id/product_rate_rb"
        android:layout_marginTop="8dp"
        android:maxLines="3"
        android:lineSpacingExtra="4dp"
        android:textColor="@color/black"
        tools:text="Geschikt voor studie onderweg\nIntel Core i5 1,8GHz - 8GB - 128GB SSD/nIntel HD Graphics 6000" />

    <TextView
        android:id="@+id/product_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/product_info_tv"
        app:layout_constraintTop_toBottomOf="@id/product_info_tv"
        android:layout_marginTop="16dp"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        tools:text="13.99" />

    <TextView
        android:id="@+id/product_2nd_day_delivery_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/product_price_tv"
        app:layout_constraintTop_toBottomOf="@id/product_price_tv"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        android:textColor="@color/japanese_laurel"
        android:textStyle="bold"
        tools:visibility="visible"
        android:text="@string/delivered_tomorrow" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/product_2nd_day_delivery_tv"
        android:layout_marginTop="12dp"
        android:background="@color/alto" />
</androidx.constraintlayout.widget.ConstraintLayout>

</layout>